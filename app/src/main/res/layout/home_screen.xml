<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="20dp">

    <!-- Welcome Text -->

    <!-- Search/Chat Input -->
    <TextView
        android:id="@+id/Greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:text="Welcome!"
        android:textColor="#1A1A1A"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="2dp"
        android:radius="15dp">

        <EditText
            android:id="@+id/projectTitleInput"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:hint="Ask or find anything about your tasks..."
            android:imeOptions="actionSend"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <!-- Your Workspace Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Workspace"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginBottom="16dp" />

    <!-- Workspace Buttons Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- First Row: Projects and Tasks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Projects Button -->
            <Button
                android:id="@+id/btnProject"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="PROJECTS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button"
                android:elevation="4dp" />

            <!-- Tasks Button -->
            <Button
                android:id="@+id/btnTasks"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="TASKS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Second Row: Progress and Calendar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Progress Button -->
            <Button
                android:id="@+id/btnProgress"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="PROGRESS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button"
                android:elevation="4dp" />

            <!-- Calendar Button -->
            <Button
                android:id="@+id/btnCalendar"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="CALENDAR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>